    pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    // Build Docker images for app1 and app2
                    sh 'docker build -t app1:latest ./docker/app1'
                    sh 'docker build -t app2:latest ./docker/app2'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    // Run tests for app1 and app2
                    sh 'docker run --rm app1:latest python -m unittest discover -s src/app1'
                    sh 'docker run --rm app2:latest python -m unittest discover -s src/app2'
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    // Deploy the applications using the deploy script
                    sh './jenkins/scripts/deploy.sh'
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment was successful!'
        }
        failure {
            echo 'Deployment failed.'
        }
    }
}